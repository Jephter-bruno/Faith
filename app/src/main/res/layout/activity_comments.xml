<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FA"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">
<androidx.core.widget.NestedScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="55dp"
            android:id="@+id/bel"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilesss"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/namess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jane Doe"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#233361"                            android:textSize="12sp"
                            android:layout_marginEnd="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" from" />

                        <TextView
                            android:textColor="#233361"                            android:textSize="12sp"
                            android:id="@+id/churchsss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Meswondo Faith Church"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@android:color/black"
                            android:textSize="10sp"
                            android:id="@+id/datess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12/12/2020"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="10sp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/timess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="10:30 pm"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/celebrate"
                android:layout_marginStart="65dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:text="is celebrating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/celprofile"
                    android:layout_width="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/celname"
                            android:textStyle="bold"
                            android:text="Jane Doe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView

                            android:layout_marginStart="10dp"
                            android:text="from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/celchurch"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:text="Meswondo Faith Church"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/banner_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


            </RelativeLayout>

            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/scripturebk"
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/scripturecnt"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#33353E"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/description"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
          <androidx.cardview.widget.CardView
              ads:cardElevation="3dp"
              ads:cardCornerRadius="10dp"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/image_view"
                  android:scaleType="fitXY"
                  android:adjustViewBounds="false"
                  android:visibility="visible"
                  android:cropToPadding="true"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
          </androidx.cardview.widget.CardView>
            <io.github.ponnamkarthik.richlinkpreview.RichLinkViewSkype
                android:id="@+id/richLinkView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </io.github.ponnamkarthik.richlinkpreview.RichLinkViewSkype>
<androidx.cardview.widget.CardView
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    ads:cardCornerRadius="10dp"
    ads:cardElevation="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.exoplayer2.ui.PlayerView
        android:visibility="gone"
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:resize_mode="fill"
        app:use_controller="true" />

</androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bel"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="70dp" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
    <ImageButton
        android:id="@+id/addt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_add_circle_outline_24" />

    <EditText
        android:textSize="12sp"
        android:id="@+id/comment_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/background"
        android:hint="Write your Comment here..."
        android:inputType="textMultiLine"
        android:padding="15dp" />

    <ImageButton

        android:id="@+id/comment_btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_send_24" />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
