<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/message_profile_image"
    android:layout_width="40dp"
    android:layout_height="40dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_toEndOf="@+id/message_profile_image"
        android:layout_marginRight="1dp"
        android:id="@+id/buble"
        android:src="@drawable/ic_baseline_bubble_chart_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buble"
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_edittext_sender"
        android:text="Received message sample!"
        android:textColor="#fff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:background="@drawable/rounded_edittext"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:layout_toEndOf="@+id/receiver_message_text"
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="30dp"
        android:text="Sent message sample!"
        android:textAlignment="textStart"
         />
    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:layout_toEndOf="@+id/sender_message_text"
        android:layout_marginRight="1dp"
        android:id="@+id/bublesent"
        android:src="@drawable/ic_baseline_bubble_chart_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_profile_image_images"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/message_profile_image"
            android:id="@+id/receiver_message_images"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:visibility="visible"
            android:cropToPadding="true"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="@+id/receiver_message_images"
            android:layout_toEndOf="@+id/receiver_message_images"
            android:id="@+id/sender_message_images"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:visibility="visible"
            android:cropToPadding="true"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />
</RelativeLayout>