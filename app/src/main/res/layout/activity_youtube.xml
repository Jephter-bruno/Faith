<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YoutubeActivity">
    <LinearLayout
        android:id="@+id/comssssss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp" />

        <LinearLayout
            android:id="@+id/comsssss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/comssss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:orientation="horizontal">

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica_neue"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desma Mutai's Youtube Songs"
                    />


            </LinearLayout>

            <LinearLayout
                android:gravity="start"
                android:layout_gravity="end"
                android:id="@+id/comsss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:orientation="horizontal">

                <TextView
                    android:textSize="10sp"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/helvetica_neue"
                    android:id="@+id/church"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meswondo"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="1dp"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/load"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="No youtube songs for Janet Kirui yet. When added, they will be displayed here."
       />
</RelativeLayout>